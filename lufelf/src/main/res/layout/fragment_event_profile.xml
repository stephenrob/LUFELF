<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/image_event"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/party"
            android:background="@drawable/image_background"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/friend_name"
            android:textColor="@color/titletxt"
            android:text="Event Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/name"
            android:gravity="left"
            android:layout_below="@id/image_event"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/event_host"
            android:textSize="20dp"
            android:textColor="@color/stdtxt"
            android:text="By:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_name"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/event_location"
            android:textSize="20dp"
            android:textColor="@color/stdtxt"
            android:text="Location:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_host"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/event_date_time"
            android:textSize="20dp"
            android:textColor="@color/stdtxt"
            android:text="Date/Time:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_location"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/event_description"
            android:textSize="20dp"
            android:textColor="@color/stdtxt"
            android:text="Descripton:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_date_time"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/event_description_box"
            android:textSize="17dp"
            android:textColor="@color/stdtxt"
            android:lines="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_description"
            android:gravity="left"
            android:background="@drawable/event_text_field"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/event_attendees"
            android:textSize="20dp"
            android:textColor="@color/stdtxt"
            android:text="Attendees:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_description_box"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/event_attendees"
            android:layout_marginTop="30dp"
            android:gravity="center" >

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button"
                android:textColor="@color/stdtxt"
                android:text="Join" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button"
                android:textColor="@color/stdtxt"
                android:text="Decline"
                android:layout_marginLeft="40dp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>