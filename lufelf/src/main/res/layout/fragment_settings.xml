<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/settings_title"
        android:layout_height="wrap_content"
        android:textColor="@color/titletxt"
        android:textSize="@dimen/title"
        android:text="@string/settings_title"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_title"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/settings_layout" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/setting_delete_user"
            android:text="Change Profile Image"
            android:textSize="18dp"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/profile_image"
            android:src="@drawable/ic_camera"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

       </LinearLayout>

    <Switch
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_show_hide_location"
        android:textSize="18dp"
        android:id="@+id/settings_location"
        android:layout_below="@id/settings_layout"
        android:thumb="@drawable/apptheme_switch_inner_holo_light"
        android:track="@drawable/apptheme_switch_track_holo_light"/>

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_delete_user1"
        android:layout_below="@id/settings_location"
        android:text="Delete Account"
        android:textSize="18dp"
        android:textColor="@color/titletxt"
        android:gravity="left"
        android:layout_marginTop="30dp" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_view_profile"
        android:layout_below="@id/setting_delete_user1"
        android:text="View My Profile"
        android:textSize="18dp"
        android:textColor="@color/stdtxt"
        android:gravity="left"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/settings_logout_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/button"
        android:textColor="@color/stdtxt"
        android:text="Logout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>