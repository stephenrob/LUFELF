<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/image_friend"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/geek"
        android:background="@drawable/image_background"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/friend_name"
        android:textColor="@color/titletxt"
        android:text="FirstName Surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/name"
        android:gravity="center_horizontal"
        android:layout_below="@id/image_friend"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/friend_email"
        android:textSize="25dp"
        android:textColor="@color/stdtxt"
        android:text="Email Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_name"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/button"
        android:textColor="@color/stdtxt"
        android:text="Add Friend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/friend_email"/>

</RelativeLayout>