<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/app_bg">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/message_title"
        android:layout_height="wrap_content"
        android:textColor="@color/titletxt"
        android:textSize="@dimen/title"
        android:text="New Message"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:lines="1"
        android:background="@drawable/text_box_selector"
        android:singleLine="true"
        android:inputType="text"
        android:hint="To"
        android:textSize="@dimen/subtitle"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:id="@+id/message_to"
        android:layout_below="@id/message_title"/>

    <LinearLayout
        android:capitalize="sentences"
        android:layout_marginTop="25dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_background"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/message_linear_layout"
        android:layout_below="@id/message_to"
        >

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="10"
            android:gravity="left"
            android:background="@drawable/text_box_selector"
            android:hint="Type message here..."    />

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/button"
        android:textColor="@color/stdtxt"
        android:text="Send"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/message_linear_layout"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>