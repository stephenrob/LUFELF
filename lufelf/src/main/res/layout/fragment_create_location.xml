<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/app_bg">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/location_title"
        android:layout_height="wrap_content"
        android:textColor="@color/titletxt"
        android:textSize="@dimen/title"
        android:text="@string/location_title"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/location_title"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/app_bg" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/login_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:id="@+id/location_linear_layout"
                >

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:lines="1"
                    android:background="@drawable/text_field"
                    android:singleLine="true"
                    android:inputType="text"
                    android:hint="@string/location_name"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/text_field"
                    android:hint="@string/location_pic"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:gravity="left"
                    android:background="@drawable/text_field"
                    android:layout_marginTop="5dp"
                    android:hint="@string/location_address"    />

                <EditText
                    android:layout_width="fill_parent"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/text_field"
                    android:hint="@string/location_lon"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    />

                <EditText
                    android:layout_width="fill_parent"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/text_field"
                    android:hint="@string/location_lat"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    />


                <EditText
                    android:layout_width="fill_parent"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/text_field"
                    android:hint="@string/location_type"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:gravity="left"
                    android:background="@drawable/text_field"
                    android:layout_marginTop="5dp"
                    android:hint="@string/location_description"    />


            </LinearLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button"
                android:textColor="@color/stdtxt"
                android:text="Confirm"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_below="@id/location_linear_layout"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>