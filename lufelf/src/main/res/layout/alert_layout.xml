<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_gravity="center_vertical"
        android:alpha="1">
        <TextView
            android:id="@+id/alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/titletxt"
            android:text="title"
            android:textSize="@dimen/title"
            android:layout_gravity="center"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/expandable_list_div"/>
        <TextView
            android:id="@+id/alert_message"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/stdtxt"
            android:text="Message Details"
            android:textSize="@dimen/text"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/alert_button_pos"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:text="POS_OPTION"
                android:layout_height="wrap_content"
                android:background="@drawable/button"/>
            <Button
                android:id="@+id/alert_button_neg"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="NEG_OPTION"
                android:layout_height="wrap_content"
                android:background="@drawable/button"/>
        </LinearLayout>

    </LinearLayout>