<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/settings_title"
        android:layout_height="wrap_content"
        android:textColor="@color/titletxt"
        android:textSize="@dimen/title"
        android:text="@string/settings_title"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_show_hide_location"
        android:textSize="@dimen/subtitle"
        android:id="@+id/settings_location"
        android:layout_marginTop="30dp"
        android:layout_below="@id/settings_title"
        android:thumb="@drawable/apptheme_switch_inner_holo_light"
        android:track="@drawable/apptheme_switch_track_holo_light"/>

    <Button
        android:id="@+id/setting_delete_user"
        android:background="@drawable/button"
        android:textSize="@dimen/subtitle"
        android:textColor="@color/stdtxt"
        android:text="@string/settings_delete_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_location"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/button"
        android:textColor="@color/stdtxt"
        android:text="Logout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>