<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="fill_parent"
    android:background="@color/app_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/titletxt"
                android:textSize="@dimen/title"
                android:text="@string/login_text"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/login_title"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_background"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:id="@+id/login_liner_layout"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="User Name: "
                    android:textSize="@dimen/subtitle"
                    android:textColor="@color/stdtxt"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                  <EditText
                      android:inputType="textEmailAddress"
                      android:id="@+id/login_username_text"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:gravity="left"
                      android:lines="1"
                      android:hint="User Name"
                      android:background="@drawable/text_box_selector"
                      android:singleLine="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Password: "
                        android:textSize="@dimen/subtitle"
                        android:textColor="@color/stdtxt"
                        android:padding="10dp"
                        />
                    <EditText
                        android:id="@+id/login_password_text"
                        android:layout_width="fill_parent"
                        android:lines="1"
                        android:hint="Password"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:background="@drawable/text_box_selector"
                        android:password="true"
                    />


            </LinearLayout>
            <TextView
                android:id="@+id/login_register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="New user? Click here register! "
                android:textSize="@dimen/text"
                android:textColor="@color/titletxt"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/login_use_as_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Don't want to create an account? Click here!"
                android:textSize="@dimen/text"
                android:textColor="@color/titletxt"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/login_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button"

                android:textColor="@color/stdtxt"
                android:text="@string/login_text"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_below="@id/login_liner_layout"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
