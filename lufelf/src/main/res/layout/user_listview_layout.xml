<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/user_listview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/titletxt"
        android:textStyle="bold"
        android:textSize="@dimen/subtitle"
        android:text="USERNAME"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/user_listview_name"
        android:layout_below="@id/user_listview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/stdtxt"
        android:text="name"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/user_listview_description"
        android:layout_below="@id/user_listview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:text="Description"/>
</RelativeLayout>