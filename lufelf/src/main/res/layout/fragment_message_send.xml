<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/app_bg">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/message_title"
                android:layout_height="wrap_content"
                android:textColor="@color/titletxt"
                android:textSize="@dimen/title"
                android:text="New Message"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:background="@drawable/text_box_selector"
                android:singleLine="true"
                android:inputType="text"
                android:hint="To"
                android:textSize="@dimen/text"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:id="@+id/message_to"
                android:layout_below="@id/message_title"/>

            <LinearLayout
                android:capitalize="sentences"
                android:layout_marginTop="25dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:id="@+id/message_linear_layout"
                android:layout_below="@id/message_to"
                >

                <EditText
                    android:id="@+id/message_send_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:lines="10"
                    android:gravity="left"
                    android:background="@drawable/text_box_selector"
                    android:hint="Type message here..."    />

            </LinearLayout>

            <Button
                android:id="@+id/message_send_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button"
                android:textColor="@color/stdtxt"
                android:text="Send"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_below="@id/message_linear_layout"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>